@{
    ViewData["Title"] = "Recuperare Parolă";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #84fab0, #8fd3f4);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .forgot-password-card {
            max-width: 500px;
            margin: 80px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 30px;
            text-align: center;
        }

            .forgot-password-card h2 {
                color: #333;
                margin-bottom: 20px;
                font-size: 2rem;
                font-weight: 600;
            }

            .forgot-password-card p {
                font-size: 1.1rem;
                color: #555;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: 600;
                color: #555;
            }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .btn-primary {
            background: #e74c3c;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: bold;
            padding: 10px 25px;
            width: 100%;
            margin-top: 20px;
            transition: background 0.3s ease, transform 0.3s ease;
        }

            .btn-primary:hover {
                background: #c0392b;
                transform: scale(1.05);
            }

        .text-danger {
            margin-top: 15px;
            font-size: 0.9rem;
        }
    </style>
}

<div class="container my-5">
    <div class="forgot-password-card">
        <h2>Recuperare Parolă</h2>
        <p>Introduceți adresa de email pentru a primi instrucțiuni de resetare a parolei.</p>
        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Introduceți adresa de email" required />
            </div>
            <button type="submit" class="btn btn-primary">Trimite codul de resetare</button>
        </form>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>
