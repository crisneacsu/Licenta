@model SalaFitness.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editează Profil";
}

@section Styles {
    <style>
        /* Fundalul paginii */
        body {
            background: linear-gradient(135deg, #84fab0, #8fd3f4);
            margin: 0;
            padding: 0;
        }
        /* Cardul central pentru editarea profilului */
        .edit-profile-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 80px auto;
            padding: 30px;
        }

            .edit-profile-card h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #333;
            }
        /* Stil pentru grupul de câmpuri */
        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: 600;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        /* Stil pentru butonul de salvare */
        .btn-primary {
            background: #e74c3c;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: bold;
            padding: 10px 20px;
            transition: background 0.3s ease;
            display: block;
            width: 100%;
            margin-top: 20px;
        }

            .btn-primary:hover {
                background: #c0392b;
            }
        /* Stil pentru secțiunea cu fotografia de profil curentă */
        .current-profile-image {
            text-align: center;
            margin-top: 20px;
        }

            .current-profile-image p {
                margin-bottom: 10px;
                font-weight: 600;
                color: #333;
            }

            .current-profile-image img {
                max-width: 200px;
                border-radius: 50%;
                border: 4px solid #e74c3c;
            }
    </style>
}

<div class="edit-profile-card">
    <h2>Editează Profilul</h2>
    <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Nume:</label>
            <input type="text" class="form-control" value="@Model.Nume" readonly />
        </div>
        <!-- Poți adăuga și alte câmpuri după nevoie -->
        <div class="form-group">
            <label for="ProfileImage">Fotografie de profil:</label>
            <input type="file" class="form-control" name="ProfileImage" id="ProfileImage" />
        </div>
        <button type="submit" class="btn btn-primary">Salvează</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
    {
        <div class="current-profile-image">
            <p>Fotografia de profil curentă:</p>
            <img src="@Url.Content(Model.ProfileImagePath)" alt="Fotografie profil" />
        </div>
    }
</div>
