@section Styles {
    <style>
        @@import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css");

        body {
            background: linear-gradient(135deg, #84fab0, #8fd3f4);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .plans-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 60px 15px;
        }

        .plans-title {
            text-align: center; /* Asigură titlul centrat */
            margin-bottom: 40px;
            color: #333;
            font-weight: 600;
        }

        .pricing-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            background: #fff;
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
        }

            .pricing-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 25px rgba(0,0,0,0.15);
            }

        .pricing-header {
            position: relative;
            color: #fff;
            padding: 40px 20px 70px;
            text-align: center;
        }

            .pricing-header .icon {
                font-size: 2.2rem;
                margin-bottom: 10px;
            }

            .pricing-header h5 {
                margin: 0;
                font-size: 1.2rem;
                font-weight: 700;
            }

        .wave-svg {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 60px;
        }

        .pricing-body {
            padding: 40px 20px 20px;
            text-align: center;
        }

        .price {
            font-size: 2rem;
            font-weight: 700;
            color: #e74c3c;
            margin-bottom: 1rem;
        }

        .features {
            list-style: none;
            padding: 0;
            margin: 0 auto 1.5rem;
            max-width: 220px;
            text-align: left;
        }

            .features li {
                margin-bottom: 8px;
                font-size: 0.95rem;
                position: relative;
                padding-left: 18px;
            }

                .features li::before {
                    content: "✓";
                    position: absolute;
                    left: 0;
                    color: #27ae60;
                }

        .card-footer {
            background: transparent;
            border: none;
            text-align: center;
            padding: 20px;
        }

        .btn-buy {
            background: #333;
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            transition: background 0.3s, transform 0.3s;
        }

            .btn-buy:hover {
                background: #000;
                transform: scale(1.05);
            }
    </style>
}

<div class="plans-container">
    <h2 class="plans-title">Alege Abonamentul Potrivit</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var plan in subscriptions)
        {
            <div class="col">
                <div class="card pricing-card h-100">
                    <div class="pricing-header" style="background-color:@plan.Color">
                        <i class="fas fa-@plan.Icon icon"></i>
                        <h5>@plan.Name</h5>
                        <svg class="wave-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 500 100" preserveAspectRatio="none">
                            <path d="@plan.WavePath" fill="#fff" />
                        </svg>
                    </div>
                    <div class="pricing-body">
                        <div class="price">@plan.Price lei</div>
                        <ul class="features">
                            @foreach (var benefit in plan.Benefits)
                            {
                                <li>@benefit</li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer">
                        <a href="/Payments/Checkout?abonament=@plan.Type" class="btn btn-buy">Cumpără</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
