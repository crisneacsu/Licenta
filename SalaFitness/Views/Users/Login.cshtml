@model SalaFitness.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Autentificare";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #84fab0, #8fd3f4);
        }

        .login-card {
            background: #fff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            max-width: 500px;
            width: 100%;
            margin: 80px auto; /* spațiu deasupra pentru navbar */
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #333;
            }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: 600;
            color: #555;
        }

        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .text-danger {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        button[type="submit"] {
            width: 100%;
            padding: 12px;
            background: #e74c3c;
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
            transition: background 0.3s ease;
        }

            button[type="submit"]:hover {
                background: #c0392b;
            }

        .login-footer {
            margin-top: 15px;
            text-align: center;
        }

            .login-footer a {
                color: #e74c3c;
                font-weight: bold;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .login-footer a:hover {
                    color: #c0392b;
                }

        .forgot-password {
            margin-top: 10px;
        }

            .forgot-password a {
                color: #e74c3c;
                font-weight: bold;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .forgot-password a:hover {
                    color: #c0392b;
                }
    </style>
}

<div class="login-card">
    <h2>Autentificare</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" placeholder="Introdu emailul" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Parola"></label>
            <input asp-for="Parola" type="password" placeholder="Introdu parola" />
            <span asp-validation-for="Parola" class="text-danger"></span>
        </div>
        <button type="submit">Autentificare</button>
    </form>
    <div class="login-footer">
        <p>
            Nu ai cont? <a asp-controller="Users" asp-action="Register">Înregistrează-te acum!</a>
        </p>
        <p class="forgot-password">
            Ai uitat parola? <a asp-controller="Users" asp-action="ForgotPassword">Recupereaz-o acum!</a>
        </p>
    </div>
</div>

<!-- Scripturile pentru validare client-side -->
<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.6/jquery.validate.unobtrusive.min.js"></script>
