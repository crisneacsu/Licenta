@model SalaFitness.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Resetare Parolă";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #84fab0, #8fd3f4);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .reset-password-card {
            max-width: 500px;
            margin: 80px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
        }

            .reset-password-card h2 {
                margin-bottom: 20px;
                color: #333;
                font-size: 2rem;
                font-weight: 600;
            }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: 600;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .text-danger {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .btn-primary {
            background: #e74c3c;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: bold;
            padding: 10px 25px;
            display: block;
            width: 100%;
            margin-top: 20px;
            transition: background 0.3s ease, transform 0.3s ease;
        }

            .btn-primary:hover {
                background: #c0392b;
                transform: scale(1.05);
            }
    </style>
}

<div class="container my-5">
    <div class="reset-password-card">
        <h2>Resetare Parolă</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="ResetPassword" method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Introduceți adresa de email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code">Cod primit pe email</label>
                <input asp-for="Code" type="text" class="form-control" placeholder="Introduceți codul de resetare" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Introduceți noua parolă" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Resetează Parola</button>
        </form>
    </div>
</div>
